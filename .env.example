# Environment Configuration for RF Expert AI Platform
# Copy this file to .env and customize for your deployment

# ============================================
# LLM Backend Selection
# ============================================
# Choose: 'ollama' or 'localai'
LLM_BACKEND=ollama

# Ollama Configuration
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=llama2

# LocalAI Configuration
LOCALAI_HOST=http://localai:8080
LOCALAI_MODEL=ggml-gpt4all-j

# ============================================
# Security and Audit Configuration
# ============================================
# Enable comprehensive audit logging
ENABLE_AUDIT_LOGGING=true

# Audit Database Configuration
AUDIT_DB_HOST=audit-db
AUDIT_DB_PORT=5432
AUDIT_DB_NAME=audit_db
AUDIT_DB_USER=audit_user
AUDIT_DB_PASSWORD=changeme_secure_password_here

# Audit log file path
AUDIT_LOG_PATH=/app/audit_logs

# ============================================
# Application Database
# ============================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=rf_expert_ai
POSTGRES_USER=rf_expert_ai_user
POSTGRES_PASSWORD=changeme_app_password_here

# ============================================
# Monitoring and Observability
# ============================================
# Grafana admin password
GRAFANA_PASSWORD=changeme_grafana_password

# Prometheus configuration
PROMETHEUS_RETENTION=15d

# ============================================
# Network and Security
# ============================================
# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:8501,http://localhost

# Session timeout (minutes)
SESSION_TIMEOUT=30

# Maximum file upload size (MB)
MAX_UPLOAD_SIZE=100

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============================================
# Data Classification
# ============================================
# Default data classification level
DATA_CLASSIFICATION=RESTRICTED

# Enable data loss prevention
ENABLE_DLP=true

# ============================================
# Compliance Settings
# ============================================
# Regulatory framework (GDPR, HIPAA, SOC2, etc.)
COMPLIANCE_FRAMEWORK=SOC2

# Enable compliance reporting
ENABLE_COMPLIANCE_REPORTS=true

# Audit log retention (days)
AUDIT_RETENTION_DAYS=2555  # 7 years

# ============================================
# Backup and Recovery
# ============================================
# Backup schedule (cron format)
BACKUP_SCHEDULE="0 2 * * *"

# Backup retention (days)
BACKUP_RETENTION_DAYS=90

# Backup encryption
ENABLE_BACKUP_ENCRYPTION=true

# ============================================
# Performance Tuning
# ============================================
# Worker processes
WORKERS=4

# Thread pool size
THREAD_POOL_SIZE=10

# Cache size (MB)
CACHE_SIZE_MB=512

# ============================================
# Feature Flags
# ============================================
# Enable fine-tuning capability
ENABLE_FINETUNING=true

# Enable web scraping
ENABLE_WEB_SCRAPING=false

# Enable document export
ENABLE_DOCUMENT_EXPORT=false  # Restricted in regulated environments

# Enable anonymous mode
ENABLE_ANONYMOUS_MODE=false

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or text

# Application logs
APP_LOG_PATH=/app/logs

# ============================================
# Docker Compose Profiles
# ============================================
# Activate these profiles in docker-compose
# COMPOSE_PROFILES=ollama  # or localai
